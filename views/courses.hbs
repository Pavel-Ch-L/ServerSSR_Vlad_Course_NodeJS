<h1>Все курсы</h1>

{{#if courses.length}}
  {{#each courses}}
    <div class="row">
      <div class="col s4 offset-s4">
        <div class="card">
          <div class="card-image">
            <img src="{{img}}">
          </div>
          <div class="card-content">
            <span class="card-title"><strong>{{title}}</strong></span>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action">
            <a href="/courses/{{id}}" target="_blank">Открыть курс</a>
            {{#if @root.isAuth}}
              {{#ifeq userId._id @root.userId}}
                <a href="/courses/{{id}}/edit?allow=true">Редактировать</a>
              {{/ifeq}}
              <form action="cart/add" method="post">
                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                <input type="hidden" name="id" value="{{id}}">
                <button class="btn" type="submit">Купить</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Курсов пока нет</p>
{{/if}}