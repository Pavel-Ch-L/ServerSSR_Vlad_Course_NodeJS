<h1>Корзина</h1>

<div class="cart">
  {{#if cart.courses.length}}
    <table>
      <thead>
        <th>Название</th>
        <th>Количество</th>
        <th>Действие</th>
      </thead>
      <tbody>
        {{#each cart.courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td><button class="btn js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p>Общая стоимость:&emsp;<span class="price">{{cart.price}}</span></p>
    <form action="/orders" method="post">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button class="btn" type="submit">Сделать заказ</button>
    </form>
  {{else}}
    <p>Корзина пуста</p>
  {{/if}}
</div>