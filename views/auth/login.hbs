<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a href="#register">Регистрация</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if errorLogin}}
        <p class="alert">{{errorLogin}}</p>
      {{/if}}
      <h1>Войти в магазин</h1>
      <form action="/auth/login" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="row">
          <div class="input-field col s12">
            <input id="email" name="email" type="email" class="validate" required>
            <label for="email">Введите email</label>
            <span class="helper-text" data-error=""></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" name="password" type="password" class="validate" required>
            <label for="password">Введите пароль</label>
            <span class="helper-text" data-error=""></span>
          </div>
        <a href="/auth/reset">Восстановить пароль</a>
        </div>
        <button class="btn" type="submit">Войти</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if errorRegister}}
        <p class="alert">{{errorRegister}}</p>
      {{/if}}
      <h1>Создать аккаунт</h1>
      <form action="/auth/register" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="row">
          <div class="input-field col s12">
            <input id="rname" name="name" type="text" class="validate" required>
            <label for="rname">Введите имя</label>
            <span class="helper-text" data-error=""></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="remail" name="email" type="email" class="validate" required>
            <label for="remail">Введите email</label>
            <span class="helper-text" data-error=""></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="rpassword" name="password" type="password" class="validate" required>
            <label for="rpassword">Введите пароль</label>
            <span class="helper-text" data-error=""></span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="confirm" name="confirm" type="password" class="validate" required>
            <label for="confirm">Пароль еще раз</label>
            <span class="helper-text" data-error=""></span>
          </div>
        </div>
        <button class="btn" type="submit">Зарегистрироваться</button>
      </form>
    </div>
  </div>
</div>
