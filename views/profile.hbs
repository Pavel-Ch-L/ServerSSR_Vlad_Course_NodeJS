<h1>Профиль</h1>

<div class="row auth">
  <div class="col s6">
    {{#if user.avatarUrl}}
      <img class="avatar" src="{{user.avatarUrl}}" alt="{{user.name}}">
    {{else}}
      <p>Аватара нет</p>
    {{/if}}
  </div>
  <div class="col s6">
    <form action="/profile" method="post" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <p>Ваш Email <strong>{{user.email}}</strong></p>
      <div class="input-field auth">
        <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required>
        <label for="name">Имя пользователя</label>
        <span class="helper-text" data-error=""></span>
      </div>
      <div class="file-field input-field">
        <div class="btn">
          <span>Аватар</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      <button class="btn" type="submit">Изменить</button>
    </form>
  </div>
</div>